<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
            <form action="/listing/<%= docs._id%>?_method=PUT" method="post">

                <div class="mb-2">
                    <label for="title" class="form-lable">Title</label>
                    <input name="title" class="form-control" type="text" value="<%= docs.title %>">
                </div>

                <div class="mb-2">
                    <label for="description" class="form-lable">Description</label>
                    <textarea name="description" class="form-control" id=""><%= docs.description %></textarea> <br>
                </div>

                <div class="mb-2">
                    <label for="image" class="form-lable">Image link</label>
                    <input type="text" name="image" class="form-control" value="<%= docs.image %>"> <br>
                </div>

                <div class="row">
                    <div class="col-4 mb-2">
                        <label for="price" class="form-lable">Price</label>
                        <input type="number" name="price" class="form-control" value="<%= docs.price %>"> <br>
                    </div>
    
                    <div class="col-md-8 mb-2">
                        <label for="country" class="form-lable">country</label>
                        <input type="text" name="country" class="form-control" value="<%= docs.country %>"> <br>
                    </div>
                </div>

                <div class="mb-2">
                    <label for="location" class="form-lable">Location</label>
                    <input type="text" name="location" class="form-control" value="<%= docs.location %>"> <br>
                </div>

                <button class="add-btn mt-3 mb-5">Edit</button>

            </form>
        </div>  
    </body>
